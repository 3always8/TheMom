<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ssong.themom.LoginSNSActivity"
        android:orientation="vertical"
>
    <ImageView
            android:layout_margin="70dp"
            android:layout_gravity="center"
            android:src="@drawable/loading_image"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
    <LinearLayout
            android:layout_margin="@dimen/login_sns_button_margin"
            android:layout_gravity="center"
            android:background="#F9DC4D"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_weight="1"
                android:src="@mipmap/app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <android.support.v7.widget.AppCompatButton
                android:layout_weight="5"
                android:text="카카오톡으로 로그인"
                android:background="#F9DC4D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_margin="@dimen/login_sns_button_margin"
            android:layout_gravity="center"
            android:background="#009D50"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_weight="1"
                android:src="@mipmap/app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <android.support.v7.widget.AppCompatButton
                android:layout_weight="5"
                android:text="네이버로 로그인"
                android:textColor="@color/white"
                android:background="#009D50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_margin="@dimen/login_sns_button_margin"
            android:layout_gravity="center"
            android:background="#007EB4"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_weight="1"
                android:src="@mipmap/app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <android.support.v7.widget.AppCompatButton
                android:layout_weight="5"
                android:text="페이스북으 로그인"
                android:textColor="@color/white"
                android:background="#007EB4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
        <android.support.v7.widget.AppCompatButton
                android:layout_margin="@dimen/login_sns_button_margin"
                android:layout_gravity="center"
                android:text="이메일로 로그인"
                android:textColor="@color/babyBlueFont"
                android:background="@color/babyBlue"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        <android.support.v7.widget.AppCompatButton
                android:layout_margin="@dimen/login_sns_button_margin"
                android:layout_gravity="center"
                android:text="이메일로 가입하기"
                android:textColor="@color/babyRedFont"
                android:background="@color/babyRed"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>

</LinearLayout>
